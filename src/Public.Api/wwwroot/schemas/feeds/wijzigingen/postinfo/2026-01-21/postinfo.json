{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:basisregisters:schemas:feeds:wijzigingen:postinfo:2026-01-01",
  "title": "Postinfo event data (create/update/delete)",
  "type": "object",
  "additionalProperties": false,
  "required": ["@id", "objectId", "naamruimte", "versieId", "nisCodes", "attributen"],
  "properties": {
    "@id": {
      "type": "string",
      "format": "uri",
      "description": "Canonical identifier URI of the postal information"
    },
    "objectId": {
      "type": "string",
      "description": "Postal object identifier (typically postalcode as string)"
    },
    "naamruimte": {
      "type": "string",
      "format": "uri",
      "description": "Namespace URI"
    },
    "versieId": {
      "type": "string",
      "format": "date-time",
      "description": "Version timestamp of the postal information state"
    },
    "nisCodes": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "string",
        "pattern": "^[0-9]{5}$"
      },
      "description": "List of NIS codes associated with the postal information"
    },
    "attributen": {
      "type": "array",
      "items": { "$ref": "#/$defs/attribuutChange" },
      "description": "List of attribute changes"
    }
  },
  "$defs": {
    "attribuutChange": {
      "type": "object",
      "additionalProperties": false,
      "required": ["naam", "oudeWaarde", "nieuweWaarde"],
      "properties": {
        "naam": {
          "type": "string",
          "description": "Name of the changed attribute"
        },
        "oudeWaarde": {},
        "nieuweWaarde": {}
      },
      "allOf": [
        {
          "if": {
            "properties": { "naam": { "const": "postInfoStatus" } },
            "required": ["naam"]
          },
          "then": {
            "properties": {
              "oudeWaarde": {
                "type": ["null", "string"],
                "enum": ["inGebruik", "gehistoreerd"]
              },
              "nieuweWaarde": {
                "type": "string",
                "enum": ["inGebruik", "gehistoreerd"]
              }
            }
          }
        },
        {
          "if": {
            "properties": { "naam": { "const": "postnamen" } },
            "required": ["naam"]
          },
          "then": {
            "properties": {
              "oudeWaarde": {
                "type": "array",
                "items": { "$ref": "#/$defs/postnaam" }
              },
              "nieuweWaarde": {
                "type": "array",
                "minItems": 1,
                "items": { "$ref": "#/$defs/postnaam" }
              }
            }
          }
        },
        {
          "if": {
            "properties": { "naam": { "const": "gemeente.id" } },
            "required": ["naam"]
          },
          "then": {
            "properties": {
              "oudeWaarde": { "type": ["null", "string"] },
              "nieuweWaarde": { "type": ["null", "string"] }
            }
          }
        }
      ]
    },
    "postnaam": {
      "type": "object",
      "additionalProperties": false,
      "required": ["spelling", "taal"],
      "properties": {
        "spelling": { "type": "string" },
        "taal": { "type": "string", "pattern": "^[a-z]{2}$" }
      }
    }
  }
}
